---
import NavLink from "@components/base/NavLink.astro";
import ButtonMain from "@components/base/ButtonMain.astro";
---

<header class="flex justify-between items-center w-full h-[64px] px-4 lg:px-8">
  <nav>
    <ul class="flex items-center gap-6">
      <li>
        <NavLink to="#explore">Explore</NavLink>
      </li>
      <li>
        <NavLink to="#portafolio">Portafolio</NavLink>
      </li>
      <li>
        <NavLink to="/">Learn</NavLink>
      </li>
      <li>
        <NavLink to="/">Contact</NavLink>
      </li>
    </ul>
  </nav>
  <div class="flex items-center gap-6">
    <button type="button" class="flex md:hidden text-black">
      <svg
        class="icon icon-tabler icon-tabler-menu-deep"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M4 6h16"></path><path d="M7 12h13"></path><path d="M10 18h10"
        ></path></svg
      >
    </button>
    <div class="hidden md:flex items-center gap-6">
      <a
        href="mailto:DARRELSTEWARD@GMAIL.COM"
        class="uppercase font-medium hover:underline transition-all duration-150 ease-linear"
        >DARRELSTEWARD@GMAIL.COM</a
      >
      <ButtonMain>Let's Connect</ButtonMain>
    </div>
  </div>
</header>
