---
const { to, class: className } = Astro.props;
---

<a
  href={to}
  class="relative inline-flex items-center justify-center leading-3 no-underline space-x-1 px-1 pt-1 pb-2 text-black font-sans font-bold text-sm uppercase focus:outline-none focus:ring-2 focus:ring-inset focus:ring-neutral-500 transition group"
  :class={className}
>
  <slot />
  <span
    class="absolute bottom-0 left-0 w-full h-0.5 rounded-full bg-black origin-bottom-right transform transition duration-200 ease-out scale-x-0 group-hover:scale-x-100 group-hover:origin-bottom-left"
  ></span>
</a>
